    real_server <%= @ip %> <%= @port %> {
      weight <%= @weight %>

<% if @inhibit %>
      inhibit_on_failure
<% end %>
<%    case @check_type
      when "MISC_CHECK" %>
      MISC_CHECK {
          misc_path "<%= @check_misc_path %> <%= @name %> <%= @port %>"
          misc_timeout 5
          nb_get_retry 3
          delay_before_retry 5
      }
    <% when "TCP_CHECK" %>
      TCP_CHECK {
        connect_port <%= @port %>
        connect_timeout 5
      }
    <%
    when "HTTP_GET" %>
      HTTP_GET|SSL_GET {
        url {              # You can add multiple url block
          path <%= @check_url_path %>
          digest <%= @check_url_digest %>
        }
        connect_port <%= @real_check_connect_port %>
        connect_timeout <%= @check_connect_timeout %>
        nb_get_retry <%= @check_nb_get_retry %>
        delay_before_retry <%= @check_delay_before_retry %>
      }
    <% end %>
    }
