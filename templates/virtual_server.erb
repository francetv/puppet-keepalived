virtual_server <%= @virtual_ipaddress %> <%= @virtual_server_port %> {
    delay_loop 3
    lb_algo <%= @lb_algo %>
    lb_kind <%= @lb_kind %>
    nat_mask 255.255.255.0
    protocol TCP

<% @real_servers.each do |ip| %>

    real_server <%= @ip %> <%= @virtual_server_port %> {
      weight <%= @weight %>
<%    case @check_type
      when "MISC_CHECK" %>
      MISC_CHECK {
          misc_path "<%= @check_misc_path %>"
          connect_timeout <%= @check_connect_timeout %>
          nb_get_retry <%= @check_nb_get_retry %>
          delay_before_retry <%= @check_delay_before_retry %>
      }
    <%
    when "TCP_CHECK" %>
      TCP_CHECK {
        connect_port <%= @virtual_server_port %>
        connect_timeout 5
      }
    <%
    when "HTTP_GET" %>
      HTTP_GET|SSL_GET {
        url {              # You can add multiple url block
          path <%= @check_url_path %>
          digest <%= @check_url_digest %>
        }
        connect_port <%= @real_check_connect_port %>
        connect_timeout <%= @check_connect_timeout %>
        nb_get_retry <%= @check_nb_get_retry %>
        delay_before_retry <%= @check_delay_before_retry %>
      }
    <% end %>
    }
<% end %>
}