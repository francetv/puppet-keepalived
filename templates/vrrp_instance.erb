<% @vip.each do |ip| %>
vrrp_instance <%= @name %>_<%= ip['vip'] %> {
        state <%= ip['state'] %>
        interface <%= @interface %>
        virtual_router_id <%= ip['router_id'] %>
        priority <%= ip['priority'] %>
        advert_int 1
        smtp_alert
        authentication {
                auth_type PASS
                auth_pass <%= @auth_pass %>
        }

        notify_master /etc/keepalived/vrrp_master.sh
        notify_backup /etc/keepalived/vrrp_backup.sh
        notify_fault /etc/keepalived/vrrp_backup.sh
        notify /etc/keepalived/vrrp_state.sh

        virtual_ipaddress {
               <%= ip['vip'] %>
        }
}
<% end %>